<data>

<record id="customer_invoice_analysis_view_search" model="ir.ui.view">
    <field name="name">account.customer_invoice_analysis search</field>
    <field name="model">account.customer_invoice_analysis</field>
    <field name="arch" type="xml">
        <search>
            <field name="company_id" groups="base.group_multi_company"/>
            <field name="product_id"/>
            <field name="payment_term_id"/>
            <field name="period_id"/>
            <field name="product_categ_id"/>
            <field name="journal_id"/>
            <field name="partner_id"/>
            <field name="commercial_partner_id"/>
            <field name="user_id"/>
            <field name="account_id"/>
            <field name="account_analytic_id"/>
            <field name="partner_bank_id"/>
            <field name="country_id"/>
            <filter name="dom_empty" string="Empty" domain="[('id','=',0)]"/>
            <group name="filter_type" string="Type">
                <filter name="filter_out_invoice" string="Customer Invoice" domain="[('type','=','out_invoice')]"/>
                <filter name="filter_out_refund" string="Customer Refund" domain="[('type','=','out_refund')]"/>
            </group>
            <group name="filter_state" string="State">
                <filter name="filter_draft" string="Draft" domain="[('state','=','draft')]"/>
                <filter name="filter_open" string="Open" domain="[('state','=','open')]"/>
                <filter name="filter_proforma" string="Draft" domain="[('state','in', ['proforma','proforma2'])]"/>
                <filter name="filter_paid" string="Paid" domain="[('state','=','paid')]"/>
                <filter name="filter_cancel" string="Cancel" domain="[('state','=','cancel')]"/>
            </group>
            <group name="filter_date_invoice" string="Date Invoice">
                <filter string="01" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,1,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,1,31).strftime('%Y-%m-%d'))]"/>
                <filter string="02" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,2,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', (datetime.date(context_today().year,2,1) + relativedelta(months=1) + relativedelta(days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="03" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,3,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,3,31).strftime('%Y-%m-%d'))]"/>
                <filter string="04" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,4,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,4,30).strftime('%Y-%m-%d'))]"/>
                <filter string="05" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,5,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,5,31).strftime('%Y-%m-%d'))]"/>
                <filter string="06" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,6,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,6,30).strftime('%Y-%m-%d'))]"/>
                <filter string="07" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,7,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,7,31).strftime('%Y-%m-%d'))]"/>
                <filter string="08" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,8,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,8,31).strftime('%Y-%m-%d'))]"/>
                <filter string="09" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,9,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,9,30).strftime('%Y-%m-%d'))]"/>
                <filter string="10" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,10,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,10,31).strftime('%Y-%m-%d'))]"/>
                <filter string="11" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,11,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,11,30).strftime('%Y-%m-%d'))]"/>
                <filter string="12" domain="[('date_invoice','&gt;=', datetime.date(context_today().year,12,1).strftime('%Y-%m-%d')), ('date_invoice','&lt;=', datetime.date(context_today().year,12,31).strftime('%Y-%m-%d'))]"/>
            </group>
            <group name="filter_date_due" string="Date Due">
                <filter string="01" domain="[('date_due','&gt;=', datetime.date(context_today().year,1,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,1,31).strftime('%Y-%m-%d'))]"/>
                <filter string="02" domain="[('date_due','&gt;=', datetime.date(context_today().year,2,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', (datetime.date(context_today().year,2,1) + relativedelta(months=1) + relativedelta(days=-1)).strftime('%Y-%m-%d'))]"/>
                <filter string="03" domain="[('date_due','&gt;=', datetime.date(context_today().year,3,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,3,31).strftime('%Y-%m-%d'))]"/>
                <filter string="04" domain="[('date_due','&gt;=', datetime.date(context_today().year,4,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,4,30).strftime('%Y-%m-%d'))]"/>
                <filter string="05" domain="[('date_due','&gt;=', datetime.date(context_today().year,5,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,5,31).strftime('%Y-%m-%d'))]"/>
                <filter string="06" domain="[('date_due','&gt;=', datetime.date(context_today().year,6,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,6,30).strftime('%Y-%m-%d'))]"/>
                <filter string="07" domain="[('date_due','&gt;=', datetime.date(context_today().year,7,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,7,31).strftime('%Y-%m-%d'))]"/>
                <filter string="08" domain="[('date_due','&gt;=', datetime.date(context_today().year,8,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,8,31).strftime('%Y-%m-%d'))]"/>
                <filter string="09" domain="[('date_due','&gt;=', datetime.date(context_today().year,9,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,9,30).strftime('%Y-%m-%d'))]"/>
                <filter string="10" domain="[('date_due','&gt;=', datetime.date(context_today().year,10,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,10,31).strftime('%Y-%m-%d'))]"/>
                <filter string="11" domain="[('date_due','&gt;=', datetime.date(context_today().year,11,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,11,30).strftime('%Y-%m-%d'))]"/>
                <filter string="12" domain="[('date_due','&gt;=', datetime.date(context_today().year,12,1).strftime('%Y-%m-%d')), ('date_due','&lt;=', datetime.date(context_today().year,12,31).strftime('%Y-%m-%d'))]"/>
            </group>
            <group name="row_grp" string="Row Grouping">
                <filter name="row_grp_company" string="Company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                <filter name="row_grp_type" string="Type" context="{'group_by':'type'}"/>
                <filter name="row_grp_product" string="Product" context="{'group_by':'product_id'}"/>
                <filter name="row_grp_product_categ" string="Product Category" context="{'group_by':'product_categ_id'}"/>
                <filter name="row_grp_payment_term" string="Payment Term" context="{'group_by':'payment_term_id'}"/>
                <filter name="row_grp_period" string="Period" context="{'group_by':'period_id'}"/>
                <filter name="row_grp_journal" string="Journal" context="{'group_by':'journal_id'}"/>
                <filter name="row_grp_partner" string="Partner" context="{'group_by':'partner_id'}"/>
                <filter name="row_grp_commercial_partner" string="Commercial Partner" context="{'group_by':'commercial_partner_id'}"/>
                <filter name="row_grp_user" string="Responsible" context="{'group_by':'user_id'}"/>
                <filter name="row_grp_account" string="Account" context="{'group_by':'account_id'}"/>
                <filter name="row_grp_account_analytic" string="Analytic Account" context="{'group_by':'account_analytic_id'}"/>
                <filter name="row_grp_partner_bank" string="Partner Bank" context="{'group_by':'partner_bank_id'}"/>
                <filter name="row_grp_country" string="Country" context="{'group_by':'country_id'}"/>
                <filter name="row_grp_date_invoice_year" string="Date Invoice by Year" context="{'group_by':'date_invoice:year'}"/>
                <filter name="row_grp_date_invoice_month" string="Date Invoice by Month" context="{'group_by':'date_invoice:month'}"/>
                <filter name="row_grp_date_invoice_week" string="Date Invoice by Week" context="{'group_by':'date_invoice:week'}"/>
                <filter name="row_grp_date_invoice_day" string="Date Invoice by Day" context="{'group_by':'date_invoice:day'}"/>
                <filter name="row_grp_date_due_year" string="Date Invoice by Year" context="{'group_by':'date_due:year'}"/>
                <filter name="row_grp_date_due_month" string="Date Invoice by Month" context="{'group_by':'date_due:month'}"/>
                <filter name="row_grp_date_due_week" string="Date Invoice by Week" context="{'group_by':'date_due:week'}"/>
                <filter name="row_grp_date_due_day" string="Date Invoice by Day" context="{'group_by':'date_due:day'}"/>
            </group>
            <group name="col_grp" string="Col Grouping">
                <filter name="col_grp_company" string="Company" context="{'col_group_by':'company_id'}" groups="base.group_multi_company"/>
                <filter name="col_grp_type" string="Type" context="{'col_group_by':'type'}"/>
                <filter name="col_grp_product" string="Product" context="{'col_group_by':'product_id'}"/>
                <filter name="col_grp_product_categ" string="Product Category" context="{'col_group_by':'product_categ_id'}"/>
                <filter name="col_grp_payment_term" string="Payment Term" context="{'col_group_by':'payment_term_id'}"/>
                <filter name="col_grp_period" string="Period" context="{'col_group_by':'period_id'}"/>
                <filter name="col_grp_journal" string="Journal" context="{'col_group_by':'journal_id'}"/>
                <filter name="col_grp_partner" string="Partner" context="{'col_group_by':'partner_id'}"/>
                <filter name="col_grp_commercial_partner" string="Commercial Partner" context="{'col_group_by':'commercial_partner_id'}"/>
                <filter name="col_grp_user" string="Responsible" context="{'col_group_by':'user_id'}"/>
                <filter name="col_grp_account" string="Account" context="{'col_group_by':'account_id'}"/>
                <filter name="col_grp_account_analytic" string="Analytic Account" context="{'col_group_by':'account_analytic_id'}"/>
                <filter name="col_grp_partner_bank" string="Partner Bank" context="{'col_group_by':'partner_bank_id'}"/>
                <filter name="col_grp_country" string="Country" context="{'col_group_by':'country_id'}"/>
                <filter name="col_grp_date_invoice_year" string="Date Invoice by Year" context="{'col_group_by':'date_invoice:year'}"/>
                <filter name="col_grp_date_invoice_month" string="Date Invoice by Month" context="{'col_group_by':'date_invoice:month'}"/>
                <filter name="col_grp_date_invoice_week" string="Date Invoice by Week" context="{'col_group_by':'date_invoice:week'}"/>
                <filter name="col_grp_date_invoice_day" string="Date Invoice by Day" context="{'col_group_by':'date_invoice:day'}"/>
                <filter name="col_grp_date_due_year" string="Date Invoice by Year" context="{'col_group_by':'date_due:year'}"/>
                <filter name="col_grp_date_due_month" string="Date Invoice by Month" context="{'col_group_by':'date_due:month'}"/>
                <filter name="col_grp_date_due_week" string="Date Invoice by Week" context="{'col_group_by':'date_due:week'}"/>
                <filter name="col_grp_date_due_day" string="Date Invoice by Day" context="{'col_group_by':'date_due:day'}"/>
            </group>
        </search>
    </field>
</record>

<record id="customer_invoice_analysis_view_graph" model="ir.ui.view">
    <field name="name">account.customer_invoice_analysis graph</field>
    <field name="model">account.customer_invoice_analysis</field>
    <field name="arch" type="xml">
        <graph type="pivot">
            <field name="product_qty" type="measure"/>
            <field name="price_total" type="measure"/>
            <field name="price_average" type="measure"/>
            <field name="residual" type="measure"/>
            <field name="nbr" type="measure"/>
        </graph>
    </field>
</record>

<record id="customer_invoice_analysis_action" model="ir.actions.act_window">
    <field name="name">Customer Invoice Analysis</field>
    <field name="res_model">account.customer_invoice_analysis</field>
    <field name="view_type">form</field>
    <field name="view_mode">graph</field>
    <field name="context">{'search_default_dom_empty':1}</field>
    <field name="view_id" ref="customer_invoice_analysis_view_graph"/>
    <field name="search_view_id" ref="customer_invoice_analysis_view_search"/>
</record>


<menuitem
    id="customer_invoice_analysis_menu"
    name="Customer Invoice Analysis"
    parent="account.menu_finance_reporting"
    action="customer_invoice_analysis_action"
    sequence="1" />

</data>
</openerp>
